@model CartItem

<section class="py-1">
    <div class="container px-4 px-lg-5 my-5">
        <form method="post">
            <input hidden asp-for="ProductId" />
            <div class="row">
                <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="@Model.Product.ImageUrl" alt="...">
                </div>
                <div class="col-md-6">
                    <div class="small mb-1">@Model.Product.Category.Name</div>
                    <h1 class="display-5 fw-bolder">@Model.Product.Name</h1>
                    <div class="fs-5 mb-3">
                        <p class="text-decoration-line-through">@((@Model.Product.Price + @Model.Product.Price *
                            0.5).ToString("C0"))</p>
                        <p class="text-danger"><strong>@Model.Product.Price.ToString("C0")</strong></p>
                    </div>
                    <div class="d-flex mb-3">
                        <input asp-for="Quantity" class="form-control text-center me-3" id="inputQuantity" type="number"
                            value="1" min="1" max="5" style="max-width: 3rem">
                        <button class="btn btn-outline-dark flex-shrink-0" type="submit">
                            <i class="bi-cart-fill me-1"></i>
                            Add to cart
                        </button>
                    </div>
                    <p class="lead">@Html.Raw(Model.Product.Description)</p>
                </div>
            </div>
        </form>
    </div>
</section>
