@using PShop.Models.ViewModels
@model ForgotPasswordVM


<h1 class="pt-4 px-4">Forgot your password?</h1>

<div class="row px-4">
    <div class="col-md-6">
        <form asp-controller="Account" asp-action="ForgotPassword" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group m-2 pb-2">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group m-2 pb-2">
                <button type="submit" class="w-100 btn btn-dark">Submit</button>
            </div>
        </form>
    </div>
</div>