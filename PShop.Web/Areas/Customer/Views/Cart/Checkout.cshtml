@model PShop.Models.ViewModels.CartVM

<form method="post">
  <div class="row m-3">
    <div class="col-md-4 order-md-2 mb-4">
      <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-muted"></span>
        <span class="badge badge-secondary badge-pill"></span>
      </h4>
      <label></label>
      <ul class="list-group mb-3">
        <li class="list-group-item d-flex justify-content-between">
          <span>Cart total</span>
          <strong>@Model.Order.OrderTotal.ToString("C0")</strong>
        </li>
        <li class="list-group-item d-flex justify-content-between">
          <span>Shipping</span>
          <strong>Free</strong>
        </li>
        <li class="list-group-item d-flex justify-content-between">
          <span>Promo</span>
          <strong></strong>
        </li>
        <li class="list-group-item d-flex justify-content-between text-success">
          <span><strong>Total (VNĐ)</strong></span>
          <strong>@Model.Order.OrderTotal.ToString("C0")</strong>
        </li>
      </ul>
    </div>

    <div class="col-md-8 order-md-1">
      <h4 class="mb-3">Billing address</h4>
      <form class="needs-validation" novalidate="">
        <div class="row">
          <div class="col-md-6 mb-3">
            <label asp-for="Order.Name"></label>
            <input asp-for="Order.Name" type="text" class="form-control" required>
          </div>
          <div class="col-md-6 mb-3">
            <label asp-for="Order.PhoneNumber"></label>
            <input asp-for="Order.PhoneNumber" type="text" class="form-control" required>
          </div>
        </div>

        <div class="mb-3">
          <label asp-for="Order.AppUser.Email"></label>
          <input asp-for="Order.AppUser.Email" type="text" class="form-control" required>
        </div>

        <div class="mb-3">
          <label asp-for="Order.Address"></label>
          <input asp-for="Order.Address" type="text" class="form-control" required>
        </div>

        <hr class="mb-4">

        <h4 class="mb-3">Payment</h4>

        <div class="d-block my-3">
          <div class="custom-control custom-radio">
            <input value="cod" name="paymentMethod" type="radio" class="custom-control-input">
            <label class="custom-control-label">COD</label>
          </div>
          <div class="custom-control custom-radio">
            <input value="stripe" name="paymentMethod" type="radio" class="custom-control-input" checked="">
            <label class="custom-control-label">Stripe</label>
          </div>
        </div>
        <hr class="mb-4">
        <div id="cod" class="choice">
          <button class="btn btn-dark btn-lg btn-block" type="submit">Order</button>
        </div>
        <div id="stripe" class="choice">
          <button class="btn btn-dark btn-lg btn-block" type="submit">Order</button>
        </div>
      </form>
    </div>
  </div>
</form>

@section Scripts{
<script>
  $(document).ready(function () {
    $("#cod").hide();

    $("input[name$='paymentMethod']").click(function () {
      var value = $(this).val();

      $("div.choice").hide();
      $("#" + value).show();
    });
  });
</script>
}