@model PShop.Models.ViewModels.CartVM

<section class="h-100 h-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12">
        <div class="card card-registration card-registration-2" style="border-radius: 15px;">
          <div class="card-body p-0">
            <div class="row g-0">
              <div class="col-lg-8">
                <div class="p-5">
                  <div class="d-flex justify-content-between align-items-center mb-5">
                    <h1 class="fw-bold mb-0 text-black">Shopping Cart</h1>
                    @*<h6 class="mb-0 text-muted">3 items</h6>*@
                  </div>
                  <hr class="my-4">
                  @foreach (var item in Model.ListCartItem)
                  {
                    <div class="row mb-4 d-flex justify-content-between align-items-center">
                      <div class="col-md-2 col-lg-2 col-xl-2">
                        <img src="@item.Product.ImageUrl" class="img-fluid rounded-3" alt="Cotton T-shirt">
                      </div>
                      <div class="col-md-3 col-lg-3 col-xl-3">
                        <h6 class="text-black">@item.Product.Name</h6>
                        <h6 class="text-muted mb-0">@item.Price.ToString("C0")</h6>
                      </div>
                      <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                        <button class="btn btn-link px-2">
                          <a asp-action="Minus" asp-route-cartId="@item.Id"><i class="bi bi-dash-lg"></i></a>
                        </button>

                        <input id="form1" min="0" name="quantity" value="@item.Quantity" class="form-control px-2" />

                        <button class="btn btn-link px-2">
                          <a asp-action="Plus" asp-route-cartId="@item.Id"><i class="bi bi-plus-lg"></i></a>
                        </button>
                      </div>
                      <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                        <h6 class="mb-0">@((item.Price * item.Quantity).ToString("C0"))</h6>
                      </div>
                      <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                        <a asp-action="Remove" asp-route-cartId="@item.Id" class="text-muted"><i
                          class="bi bi-x-lg"></i></a>
                      </div>
                    </div>
                    <hr class="my-4">
                  }


                  <div class="pt-5">
                    <h6 class="mb-0"><a asp-area="Customer" asp-controller="Home" asp-action="Index" class="text-body"
                        style="text-decoration:none">
                        Back to shop</a>
                    </h6>
                  </div>
                </div>
              </div>
              <div class="col-lg-4 bg-grey">
                <div class="p-5">
                  <h3 class="fw-bold mb-5 mt-2 pt-1">Summary</h3>
                  <hr class="my-4">

                  <div class="d-flex justify-content-between mb-5">
                    <h5 class="text-uppercase">Total</h5>
                    <h5>@Model.Order.OrderTotal.ToString("C0")</h5>
                  </div>

                  @if (Model.ListCartItem.Count() > 0)
                  {
                    <button type="button" class="btn btn-dark btn-block btn-lg" data-mdb-ripple-color="dark">
                      <a asp-area="Customer" asp-controller="Cart" asp-action="Checkout"
                      style="text-decoration:none; color:white;">Check out</a>
                    </button>
                  }


                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
